{
  "name": "backend-test",
  "version": "1.0.0",
  "description": "Basic setup to for the backend engineer test",
  "main": "index.js",
  "scripts": {
    "dev:start": "nodemon src/bin/api.ts",
    "start": "node dist/src/bin/api.js",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "test:unit": "set DEBUG=* && jest --testPathPattern=src --coverage",
    "test:e2e": "set DEBUG=* && docker compose up -d mongodb && jest --testPathPattern=test/e2e --coverage"
  },
  "author": "Christoph Fey",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^15.0.0",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "mongoose": "^7.4.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.15.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
