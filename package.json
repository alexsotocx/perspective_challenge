{
  "name": "backend-test",
  "version": "1.0.0",
  "description": "Basic setup to for the backend engineer test",
  "main": "index.js",
  "scripts": {
    "dev:start": "nodemon src/bin/api.ts",
    "start": "node build/src/bin/api.js",
    "lint": "prettier 'src/**/*.ts' --config .prettierrc.js --write && eslint './**/*.ts' --fix",
    "build": "rm -rf build && tsc --project tsconfig.build.json",
    "test:unit": "set DEBUG=* && jest --testPathPattern=src --coverage",
    "test:e2e": "set DEBUG=* && docker compose up -d mongodb && jest --testPathPattern=test/e2e --coverage"
  },
  "author": "Christoph Fey",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^15.0.0",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "mongoose": "^7.4.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.15.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.5.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
